.content
	padding 362px 107px 0 109px

.field__question,
.field-radio__question,
.field-radio__label,
.h2,
.point__label
	color #2f1b15
	font 700 22px 'PT Sans'
	line-height 50px

.field
	display flex
	margin-bottom 1.5ex
	&__answer
		color #231f20
		font 400 30px 'Courier New'
		line-height 30px
		border none
		display inline-block
		flex-grow 1
		margin-top -28px
		padding-left 22px
		&_name,
		&_year,
		&_address
			background url("../images/name.png") right 35px no-repeat
		&_skype,
		&_mail
			background: url("../images/skype_emailLine.png") 6px 55px no-repeat
	&__question
		white-space nowrap
		display inline-block
		padding-right 10px

.field-radio
	margin-top 20px

.field-radio__link
	color #014f98
	text-decoration none
	border-bottom 1px solid
	line-height 20px
	display inline-block

.notice
	color #3d3d3d
	font 400 14px 'PT Sans'
	line-height 22px

.points-container
	clearfix()

.points
	float left

.point__change
	position relative
	width 19px
	input
		opacity 0
	&:before
		content ''
		display: block
		width 19px
		height 19px
		top 0
		left 0
		position absolute
		sprite($checkbox)

.range__item
	color #2f1b15
	font 700 13px 'PT Sans'
	line-height 36px

.h2
	margin-top 20px
	height 48px

.point
	height 34px
